<%= search_form_for(@q, url: search_path, method: :get, class: 'd-flex') do |f| %>
  <%= f.search_field :title_or_body_or_user_email_or_user_name_cont_any, placeholder: "検索キーワードを入力", class: 'form-control me-2' %>

  <!-- 開始日フィールド -->
  <%= f.label :created_at_gteq, "投稿開始日" %>
  <%= f.date_field :created_at_gteq, class: 'form-control me-2', placeholder: '年/月/日', include_blank: true %>

  <!-- 終了日フィールド（カスタム述語を使用） -->
  <%= f.label :created_at_lteq_end_of_day, "投稿終了日" %>
  <%= f.date_field :created_at_lteq_end_of_day, class: 'form-control me-2', placeholder: '年/月/日', include_blank: true %>

  <%= f.submit '検索', class: 'btn btn-outline-success' %>
<% end %>
