<%= search_form_for(@q, url: search_path, method: :get, class: 'row g-2') do |f| %>
<!-- 検索キーワード入力フィールド -->
<div class="col-12 col-md-6" data-controller="autocomplete" data-autocomplete-url-value="/search/autocomplete" role="combobox">
  <%= f.search_field :title_or_body_or_user_email_or_user_name_or_category_name_cont_any, placeholder: "検索キーワードを入力", class: 'form-control search', data: { autocomplete_target: 'input' } %>
  <div class="autocomplete-results bg-white rounded-md max-w-full">
    <ul class="list-group bg-white absolute w-full md:text-sm max-w-max" data-autocomplete-target="results"></ul>
  </div>
</div>

<!-- 開始日フィールド -->
<div class="col-6 col-md-3">
  <%= f.label :created_at_gteq, "投稿開始日", class: "form-label text-white" %>
  <%= f.date_field :created_at_gteq, class: 'form-control', placeholder: '年/月/日' %>
</div>

<!-- 終了日フィールド -->
<div class="col-6 col-md-3">
  <%= f.label :created_at_lteq_end_of_day, "投稿終了日", class: "form-label text-white" %>
  <%= f.date_field :created_at_lteq_end_of_day, class: 'form-control', placeholder: '年/月/日' %>
</div>

<!-- 検索ボタン -->
<div class="col-12 text-end">
  <%= f.submit '検索', class: 'btn btn-success w-100 w-md-auto' %>
</div>
<% end %>
