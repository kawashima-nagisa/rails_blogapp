<div class="container">
  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    <% @posts.each do |post| %>
    <div class="col">
      <%= link_to post, class: "text-decoration-none" do %>
      <div class="card h-100 shadow-sm">
        <div class="card-body">
          <!-- 投稿のタイトル -->
          <h5 class="card-title text-dark"><%= post.title %></h5>

          <!-- 投稿の内容 -->
          <p class="card-text text-muted"><%= truncate(markdown(post.body), length: 100) %></p>


          <!-- 投稿者とカテゴリー情報 -->
          <div class="d-flex justify-content-between align-items-center">
            <small class="text-muted">
              <i class="bi bi-person"></i> <%= post.user&.name %>
              | <i class="bi bi-tag"></i> <%= post.category&.name %>
            </small>
          </div>

          <!-- 投稿日時と更新日時 -->
          <div class="mt-2">
            <small class="text-muted">投稿: <%= post.created_at.strftime("%Y年%m月%d日") %></small><br>
            <small class="text-muted">更新: <%= post.updated_at.strftime("%Y年%m月%d日") %></small>
          </div>
        </div>
      </div>
      <% end %>
    </div>
    <% end %>
  </div>
</div>