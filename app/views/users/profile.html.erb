<h1><%= @user.name %>さんのプロフィールページ</h1>
<h5><%= pluralize(@user.views, "view") %></h5>



<!-- Chart.jsとMatrixプラグイン -->
<script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/chartjs-chart-matrix@2.0.0/dist/chartjs-chart-matrix.min.js"></script>

<!-- Date-fnsとアダプター -->
<script src="https://cdn.jsdelivr.net/npm/date-fns@2.29.3/date-fns.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/chartjs-adapter-date-fns@3.0.0/dist/chartjs-adapter-date-fns.bundle.min.js"></script>



<canvas data-controller="calendar"
        data-calendar-target="canvas"
        data-chart-data="<%= @chart_data.to_json %>"
        width="800" height="150">
</canvas>
