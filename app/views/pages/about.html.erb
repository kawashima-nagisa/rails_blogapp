<% breadcrumb :about %>
<section class="container my-5 about-page ">
  <h2>Qiita記事一覧
    <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-book-half" viewBox="0 0 16 16">
      <path d="M8.5 2.687c.654-.689 1.782-.886 3.112-.752 1.234.124 2.503.523 3.388.893v9.923c-.918-.35-2.107-.692-3.287-.81-1.094-.111-2.278-.039-3.213.492zM8 1.783C7.015.936 5.587.81 4.287.94c-1.514.153-3.042.672-3.994 1.105A.5.5 0 0 0 0 2.5v11a.5.5 0 0 0 .707.455c.882-.4 2.303-.881 3.68-1.02 1.409-.142 2.59.087 3.223.877a.5.5 0 0 0 .78 0c.633-.79 1.814-1.019 3.222-.877 1.378.139 2.8.62 3.681 1.02A.5.5 0 0 0 16 13.5v-11a.5.5 0 0 0-.293-.455c-.952-.433-2.48-.952-3.994-1.105C10.413.809 8.985.936 8 1.783" />
    </svg>
  </h2>
  <div class="row g-2">
    <% if @articles.present? %>
    <% @articles.each do |article| %>
    <div class="col-md-4">
      <div class="article-card p-3 border border-3 rounded border-success">
        <h3 class="article-title">
          <%= link_to article["title"], article["url"], target: "_blank", class: "text-decoration-none text-success" %>
        </h3>
        <p class="article-summary text-muted"><%= truncate(article["body"], length: 100) %></p>
        <div class="article-info">
          <span>投稿日: <%= article["created_at"].to_date %></span> |
          <span>いいね: <%= article["likes_count"] %></span>
        </div>
      </div>
    </div>
    <% end %>
    <% else %>
    <p>記事が見つかりませんでした。</p>
    <% end %>
  </div>
</section>

