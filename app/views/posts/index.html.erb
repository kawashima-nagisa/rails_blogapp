<p style="color: green"><%= notice %></p>
<div class="container">
  <h1>投稿された記事一覧</h1>

  <!-- 投稿一覧表示 -->
  <div id="posts">
    <% @posts.each do |post| %>
      <%= render partial: "post", locals: { post: post, show_full_content: @show_full_content } %>
    <% end %>
  </div>

  <!-- 新しい記事をモーダルで作成 -->
  <%= link_to "新しい記事を作成する", new_post_path, data: { turbo_frame: "modal" } %>
</div>
