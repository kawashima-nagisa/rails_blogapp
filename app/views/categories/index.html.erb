<% breadcrumb :categories %>
<div class="container my-4">
  <h1 class="mb-4">カテゴリー</h1>

  <!-- カテゴリリスト -->
  <div id="categories" class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    <% @categories.each do |category| %>
    <div class="col">
      <%= render category %>
    </div>
    <% end %>
  </div>

  <!-- 新規カテゴリーリンク -->
  <div class="mt-4">
    <%= link_to "新しい記事を作成する", new_category_path, data: { turbo_frame: "modal" }, class: "btn btn-success mb-4" %>

  </div>
</div>
