<%= form_with(model: category, local: true, class: "p-4 bg-light rounded shadow-sm") do |form| %>
<% if category.errors.any? %>
<div class="alert alert-danger">
  <h4><%= pluralize(category.errors.count, "エラー") %>があり、カテゴリーを保存できませんでした:</h4>
  <ul>
    <% category.errors.each do |error| %>
    <li><%= error.full_message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="mb-3">
  <%= form.label :name, "カテゴリー名", class: "form-label" %>
  <%= form.text_field :name, class: "form-control", placeholder: "カテゴリー名を入力" %>
</div>

<div class="d-flex justify-content-end">
  <%= form.submit "保存", class: "btn btn-primary" %>
</div>
<% end %>
