<div id="<%= dom_id(category) %>" class="card mb-3 shadow-sm">
  <div class="card-body">
    <!-- カテゴリー名 -->
    <h5 class="card-title"><strong>カテゴリー名:</strong> <%= category.name %></h5>

    <!-- 操作ボタン -->
    <div class="mt-3 d-flex gap-2">
      <%= link_to "カテゴリーの編集をする", edit_category_path(category), class: "btn btn-outline-primary btn-sm" %>
      <%= button_to "カテゴリーの削除", category, method: :delete, data: { confirm: "削除して良いですか？" }, class: "btn btn-outline-danger btn-sm" %>
    </div>
  </div>
</div>
